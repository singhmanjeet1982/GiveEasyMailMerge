@model MailMerge

@{
    ViewData["Title"] = "Home Page";
}
<h4>This MailMerge utility is using 'Interop Word Libraries' for merging field's value from csv to word.</h4>
@*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>*@
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<p>
    <u>Technologies used:</u><br />
    .Net Core 3.0<br />
    Gmail SMTP server<br />
    Microsoft interop Word Library
</p>
<script language="javascript" type="text/javascript">
    $(document).ready(function () {

        $("#submitform").click(function () {
            $("span").text("");


            if ($("#frmMailMerge").valid())
                $("#message").text("In Progress...");
        });

    });

</script>
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" id="frmMailMerge" asp-controller="Home" asp-action="Index">
            <div class="form-group">
                <font color="Green"><span id="message">@TempData["msg"]</span></font>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TemplateFile" class="control-label"></label>
                <input asp-for="TemplateFile" type="file" class="form-control" required>
                <span asp-validation-for="TemplateFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValuesFile" class="control-label"></label>
                <input asp-for="ValuesFile" type="file" class="form-control" required>
                <span asp-validation-for="ValuesFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Email" class="btn btn-primary" id="submitform" name="submitform" />
            </div>

        </form>
    </div>
</div>


